<div class="card mb-3 registry d-flex" id="registry_<%= registry.id %>">
  <div class="card-body pb-1">
    <div class="d-flex">
      
      <div class="flex-grow-1 ms-3 text-break">
        <h5 class='card-title'>
          <%= link_to registry, registry_path(registry.name) %>
        </h5>
      
        <p class="card-subtitle mb-2 text-muted">
          <%= number_with_delimiter registry.packages_count %> total packages<br/>
          <%= number_with_delimiter registry.metadata['packages_count'] %> usable packages<br/>
          <%= number_with_delimiter registry.metadata['packages_with_downloads_count'] %> packages_with_downloads<br/>
          <%= number_with_delimiter registry.metadata['packages_with_dependent_repos_count'] %> packages_with_dependent_repos<br/>
          <%= number_with_delimiter registry.metadata['packages_with_issues_closed_count'] %> packages_with_issues_closed<br/>
          <%= number_with_delimiter registry.metadata['packages_with_issues_count'] %> packages_with_issues<br/>

        </p>
      </div>
      <div class="flex-shrink-0">
        <img src="<%= registry.icon_url %>" class="rounded" height='40' width='40' onerror="this.style.display='none'">
      </div>  
    </div>
  </div>
</div>
