<div class="card mb-3">
  <div class="card-body">

    <h5 class="card-title">
      <%= link_to package.name, registry_package_path(package.registry.name, package.name) %>
      <% if package.latest_release_number %>
        <small class='text-muted'>
        <%= package.latest_release_number %>
        </small>
      <% end %>
    </h5>

    <% if package.description_with_fallback.present? %>
      <%= truncate package.description_with_fallback, :length => 100 %><br/>
    <% end %>

    <small class='text-muted'>    
      Usage: <%= number_to_human(package.usage).downcase %> (<%= package.usage_rank.to_i %>) <br/>
      Quality: <%= distance_of_time_in_words_if_present package.quality %> (<%= package.quality_rank.to_i %>)<br/>
      Number of closed issues: <%= number_with_delimiter package.issue_data['issues_closed_count'] %><br/>
      Underproduction: <%= package.production.round(2) %><br/>
    </small>
  </div>
</div>